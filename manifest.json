{
  "manifest_version": 2,
  "name": "Vocab Master",
  "description": "Reminds you vocabulary (or something else) while you surfing.",
  "version": "1.0.0",
  "author": "Ufuk Uzun",
  "background": {
    "persistent": true,
    "scripts": [
      "main.js"
    ]
  },
  "browser_action": {
    "default_icon": "vocab-icon.png"
  },
  "web_accessible_resources": [
    "intercepting-page.html",
    "intercepting.js",
    "jquery.min.js"
  ],
  "permissions": [
    "http://*/*",
    "https://*/*",
    "storage",
    "webRequest",
    "webRequestBlocking"
  ],
  "icons": {
    "256": "vocab-icon.png"
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  }
}
